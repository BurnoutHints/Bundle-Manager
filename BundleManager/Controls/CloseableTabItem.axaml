<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:BundleManager.Controls"
			 mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="30"
			 x:Class="BundleManager.Controls.CloseableTabItem"
			 x:DataType="x:Object">

	<DockPanel>
		<TextBlock Text="{Binding $parent[controls:CloseableTabItem].Header}"
				   FontSize="16"
				   VerticalAlignment="Center"/>
		<Grid ColumnDefinitions="Auto, Auto">
			<Button Content="&#x1F4BE;"
					Command="{Binding $parent[controls:CloseableTabItem].SaveCommand}"
					CommandParameter="{Binding}"
					IsEnabled="{Binding $parent[controls:CloseableTabItem].IsSaveButtonEnabled}"
					IsVisible="{Binding $parent[controls:CloseableTabItem].IsSaveButtonVisible}"
					DockPanel.Dock="Right"
					FontSize="14"
					Padding="0"
					Height="20"
					Grid.Column="0"/>
			<Button Content="X"
					Command="{Binding $parent[controls:CloseableTabItem].CloseCommand}"
					CommandParameter="{Binding}"
					IsVisible="{Binding $parent[controls:CloseableTabItem].IsCloseButtonVisible}"
					DockPanel.Dock="Right"
					FontSize="14"
					Padding="4,0,4,0"
					Height="20"
					Grid.Column="1"/>
		</Grid>
	</DockPanel>
	
</UserControl>
